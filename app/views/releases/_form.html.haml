= semantic_form_for resource, :html => { :multipart => true } do |f|
  = f.inputs do
    = f.input :title
    = f.input :description, :as => :text
    = f.input :subcategory,
      :collection => grouped_options_for_select(Release::CATEGORIES),
      :prompt => "Select category"
    = f.input :torrent, :as => :file
  = f.buttons
