%html
  %head
    %title= [@title, "EasyBt"].compact.join(" | ")
    = stylesheet_link_tag 'reset', 'application'
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #header
      %h1= link_to 'Easy Bittorrent', "/"
      %ul.menu
        %li= link_to 'News', posts_path
        %li= link_to 'Releases', releases_path
        %li= link_to 'Upload', "/releases/new"
        %li= link_to 'About', "/about"
      %ul.hmenu
        = render 'devise/menu/registration_items'
        = render 'devise/menu/login_items'
    #container
      #main
        %p.notice= notice
        %p.alert= alert
        = yield
      #sidebar
